---
interface Props {
    description: {
        title: string,
        content: string
    }[],
    include: {
        title: string,
        content: string
    }[]
}
const { description, include } = Astro.props;
---
<ul class="flex flex-col gap-4 opacity-80">
    {
        description.map((p: {
            title: string,
            content: string
        }) => (
            <li>
                <h2 class="text-2xl font-semibold">
                    {p.title}
                </h2>
                <p class="text-lg">
                    {p.content}
                </p>
            </li>
        ))
    }
</ul>
<div class="border-t-[1px] border-t-slate-700 mt-10 pt-10">
    <h3 class="text-2xl font-bold pb-2">Incluye:</h3>
    <ol class="flex flex-col gap-1 list-disc pl-5 opacity-95">
        {
            include.map((item: {
                title: string,
                content: string
            }) => (
                <li class="text-lg">
                    <p>
                        <span class="font-semibold text-slate-300">
                            {`${item.title}:`}
                        </span>
                        {item.content}
                    </p>
                </li>
            ))
        }
    </ol>
</div>