---
import SectionContainer from "@/components/sectionContainer.astro";

const categoriesForPage = [
    {
        name: "keyboards",
        bg_img: "",
        href: "/keyboards",
    },
    {
        name: "switches",
        bg_img: "",
        href: "/switches",
    },
    {
        name: "keycaps",
        bg_img: "",
        href: "/keycaps",
    },
    {
        name: "pcb",
        bg_img: "",
        href: "/pcb",
    },
    {
        name: "plate",
        bg_img: "",
        href: "/plate",
    },
    {
        name: "case",
        bg_img: "",
        href: "/case",
    },
    {
        name: "stabilizer",
        bg_img: "",
        href: "/stabilizer",
    },
    {
        name: "cables",
        bg_img: "",
        href: "/cables",
    },
    {
        name: "shockAbsorber",
        bg_img: "",
        href: "/shockAbsorber",
    },
];
---

<SectionContainer extraClass="!py-0 !mb-0 !mt-0 w-full">
    <ul
    class="flex gap-8 flex-wrap w-full justify-between"
    >
        {
            categoriesForPage.map(n => (
                <li>
                    <a 
                    href={n.href}
                    >
                        <div 
                        class:list={["flex items-center justify-center aspect-square w-[400px] rounded-xl hover:border-2 bg-center bg-cover transition-all",
                            n.bg_img ? "" : "bg-slate-600"
                        ]}
                        style={`background-image: url('${n.bg_img}');`}
                        >
                            <h2 class="text-center text-3xl font-bold">{n.name}</h2>
                        </div>
                    </a>
                </li>
            ))
        }
    </ul>
</SectionContainer>

<style>
    ul {
        scrollbar-width: none;
        scroll-behavior: smooth;
    }
</style>