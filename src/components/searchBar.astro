---
interface Props {
    className?: string;
    extraInputClass?: string;
    extraButtonClass?: string;
}

const { className, extraInputClass, extraButtonClass } = Astro.props;
---

<form
class:list={["flex gap-2", className]}
action="/search"
method="GET"
>
    <input
    type="text"
    name="query"
    placeholder="Buscar..."
    class:list={["rounded-lg outline-none w-64 bg-slate-500 py-2 px-3 opacity-65 focus:opacity-100 transition", extraInputClass]}
    >
    <button
    class:list={["rounded-lg bg-slate-800 hover:scale-105 text-white py-2 px-4 opacity-65 border-[1px] border-slate-600 hover:border-slate-500 hover:opacity-100 font-semibold transition", extraButtonClass]}
    >
        Buscar
    </button>
</form>