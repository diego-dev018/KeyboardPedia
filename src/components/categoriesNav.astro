---
const categories = [
    {
        name: "Teclados",
    },
    {
        name: "Keycaps",
    },
    {
        name: "Switches",
    },
    {
        name: "Herramientas",
    },
    {
        name: "Accesorios",
    },
    {
        name: "Mas",
    },
]
---

<div
class="flex w-full justify-center"
>
    <div class="flex gap-2 bg-slate-600 rounded-xl px-4 py-2">
        {
            categories.map(n => (
                <button
                class="text-xl font-semibold opacity-75 px-3 pb-2 pt-1 rounded-xl hover:bg-slate-800 hover:scale-105 hover:opacity-100 active:scale-100 transition duration-300"
                >
                    {n.name}
                </button>
            ))
        }
    </div>
</div>