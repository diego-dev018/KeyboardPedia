---
interface Props {
    title?: string;
    description?: string;
    image_src: string;
    extraClass?: string;
}

const { title, description, image_src, extraClass } = Astro.props;
---

<article
class:list={["w-full aspect-square bg-[size:100%] hover:bg-[size:105%] bg-center rounded-xl transition-all", extraClass]}
style=`background-image: url('${image_src}');`
>
    <a
    href="/"
    class="w-full h-full flex flex-col items-end justify-end p-4"
    >
    <p
    class="text-white/60 text-lg font-semibold"
    >
        {description}
    </p>
    <h5
    class="text-white text-2xl font-bold"
    >
        {title}
    </h5>
    </a>
</article>